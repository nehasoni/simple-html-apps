<!DOCTYPE html>
<html>
<body>

<h1>Simple Paint App</h1>
<canvas id="myCanvas" width="900" height="500" style="border:1px solid #d3d3d3;">
</canvas>
<button type="button" onclick="myFunction()">Draw circle</button>
<button type="button" onclick="resetFunction()">Reset</button>


<script>
function getRandomColor() {
    var letters = '0123456789ABCDEF'.split('');
    var color = '#';
    for (var i = 0; i < 6; i++ ) {
        color += letters[Math.floor(Math.random() * 16)];
    }
    return color;
}
function myFunction() {
    var c=document.getElementById("myCanvas");
    var ctx=c.getContext("2d");
    ctx.beginPath();
    var ranrad = Math.floor(Math.random() * (1000 - 1)) + 20;
    ctx.arc(ranrad + ranrad,ranrad,25,0,2*Math.PI);
    ctx.stroke();
    ctx.fillStyle=getRandomColor();
    ctx.fill();

}
function resetFunction(){
    myCanvas = document.getElementById("myCanvas");
    myCanvas.width = myCanvas.width;

}
</script> 
</body>
</html>
